<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 0;
            text-align: center;
            font-size: 20px;
        }
    </style>
</head>

<body>

    <h1>Options</h1>

    <table style="margin-left:auto; margin-right:auto; border:0">
        <tr style="border:0; vertical-align:top">
            <td style="border:0">

                <!-- options -->
                <table>
                    <thead>
                        <tr>
                            <td colspan="4">
                                {% if url_prev %}
                                    <a href="{{ url_prev }}">PREV</a>
                                {% endif %}
                            </td>

                            <td colspan="9">Processor: {{ processor }}</td>

                            <td colspan="4">
                                {% if url_next %}
                                    <a href="{{ url_next }}">NEXT</a>
                                {% elif url_last %}
                                    <a href="{{ url_last }}">LAST</a>
                                {% endif %}
                            </td>
                        </tr>
                    </thead>

                    <tr>
                        {% for sq in squares %}
                            {% if sq.loc %}
                                <td style="background: lightgray; color: #808080; height:40px; width:40px">{{ sq.loc }}</td>
                            {% elif sq.count %}
                                <td style="background: hsl({{ sq.hue }}, 100%, 50%);{% if sq.highlight %}background:white{% endif %}">
                                    <div{% if sq.transform %} style="transform: {{ sq.transform }}"{% endif %}>{{ sq.count }}</div>
                                </td>
                            {% else %}
                                <td style="background: #606060; width:20px; height:20px"></td>
                            {% endif %}

                            {% if sq.break_after %}
                                </tr>
                                <tr>
                            {% endif %}

                        {% endfor %}
                    </tr>

                    <tr>
                        <td colspan="17">Total options remaining: {{ total_options }}</td>
                    </tr>
                </table>
            </td>

            <td style="border:0">
                <!-- open sides usage -->
                <table style="margin-left:10px">
                    <thead>
                        <tr>
                            <th style="padding:5px">Segment</th>
                            <th style="padding:5px">Prev</th>
                            <th style="padding:5px">Now</th>
                            <th style="padding:5px">Diff</th>
                        </tr>
                    </thead>
                    {% for segment, count1, count2, diff in compare %}
                        <tr>
                            <td style="padding:5px">{{ segment }}</td>
                            <td style="padding:5px">{{ count2 }}</td>
                            <td style="padding:5px">{{ count1 }}</td>
                            <td style="padding:5px">{{ diff }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>

        </tr>
    </table>

    <br>
    <br>
    <br>

    <table style="margin-left:auto; margin-right:auto">
        <thead>
            <tr>
                <th style="padding:5px">Size</th>
                <th style="padding:5px">Top-left</th>
                <th style="padding:5px">Segment</th>
                <th style="padding:5px">Progress</th>
                <th style="padding:5px">Updated</th>
                <th style="padding:5px">Solve order</th>
            </tr>
        </thead>
        {% for obj in progress %}
            <tr>
                <td style="padding:5px">{{ obj.eval_size }}</td>
                <td style="padding:5px">{{ obj.eval_loc }}</td>
                <td style="padding:5px">{{ obj.segment }}</td>
                <td style="padding:5px">{{ obj.done_count }} / {{ obj.todo_count }}</td>
                <td style="padding:5px">{{ obj.updated_str }}</td>
                <td style="padding:5px">{{ obj.solve_order }}</td>
            </tr>
        {% endfor %}
    </table>

    {% if auto_reload %}
        <script>
            setTimeout(function(){
                window.location.reload();
            }, 15*1000);        // 15 seconds
        </script>
    {% endif %}

</body>
</html>
